<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".MainActivity"
    android:id="@+id/rootRL">

    <RelativeLayout
        android:id="@+id/contentRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/content_main" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/color_text"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </RelativeLayout>

    <com.alcntml.myapplication.component.snackbar.MvaTopSnackbarComponent
        android:id="@+id/mvaTopSnackbarComp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.alcntml.myapplication.component.tray.MvaTrayComponent
        android:id="@+id/trayNavComp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"/>

    <com.alcntml.myapplication.component.snackbar.MvaBottomSnackbarComponent
        android:id="@+id/mvaBottomSnackbarComp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.alcntml.myapplication.component.MvaLogoutComponent
        android:id="@+id/mvaLogoutComp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
